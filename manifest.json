{
  "name": "Baby Spice",
  "description": "Simple extension for Poshmark. Allows multiple follows with 1 click.",
  "version": "1.0.3",
  "manifest_version": 2,
  "permissions": [
    "tabs",
    "activeTab"
  ],
  "background": {
    "scripts": ["jquery-3.3.1.min.js", "background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "https://poshmark.com/user/*",
        "https://poshmark.com/search*"
      ],
      "js": ["jquery-3.3.1.min.js", "content.js"]
    }
  ],
  "browser_action": {
    "matches": [
      "https://poshmark.com/user/*",
      "https://poshmark.com/search*"
    ],
    "default_title": "Baby Spice",
    "default_popup": "popup.html"
  },
  "commands": {
    "toggle-feature": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "MacCtrl+Shift+Y"
       },
      "description": "Send a 'toggle-feature' event to the extension"
    },
    "do-follow": {
      "suggested_key": {
        "default": "Ctrl+Shift+F",
        "mac": "MacCtrl+Shift+F"
       },
      "description": "Do single follow"
    },
    "print-links": {
      "suggested_key": {
        "default": "Ctrl+Shift+C",
        "mac": "MacCtrl+Shift+C"
       },
      "description": "Print links to console"
    },
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+L",
        "mac": "MacCtrl+Shift+L"
      }
    }
  }
}
